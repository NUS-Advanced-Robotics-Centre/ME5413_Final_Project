<launch>

    <!-- Connect the robot to a keyboard teleop controller -->
    <node name="teleop_twist_keyboard" pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" output="screen" respawn="true"/>

    <!-- Launch GMapping -->
    <!-- <include file="$(find jackal_navigation)/launch/include/gmapping.launch" /> -->
    <!-- <node name="cartographer_node" pkg="cartographer_ros"
        type="cartographer_node" args="
            -configuration_directory
                $(find jackal_cartographer_navigation)/config
            -configuration_basename jackal.lua"
        output="screen">
        <remap from="scan" to="front/scan" />
        <remap from="odom" to="odometry/filtered" />
    </node> -->
    <node name="cartographer_node" pkg="cartographer_ros"
        type="cartographer_node" args="
            -configuration_directory $(find cartographer_ros)/configuration_files
            -configuration_basename backpack_my_2d.lua"
        output="screen">
        <remap from="echoes" to="horizontal_laser_2d" />
        <remap from="scan" to="front/scan" />
        <remap from="odom" to="odometry/filtered" />
    </node>


    <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
        type="cartographer_occupancy_grid_node" args="-resolution 0.02" />

    <!-- Launch Rviz with our settings -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find me5413_world)/rviz/gmapping.rviz" output="log" respawn="true"/>

</launch>