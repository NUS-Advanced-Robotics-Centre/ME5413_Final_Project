<launch>
 
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

    <rosparam file="$(find navigation)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find navigation)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    
    <rosparam file="$(find navigation)/params/map_nav_params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find navigation)/params/map_nav_params/global_costmap_params.yaml" command="load" />
    
    <rosparam file="$(find navigation)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find navigation)/params/base_global_planner_params.yaml" command="load" />
    <rosparam file="$(find navigation)/params/move_base_params.yaml" command="load" />
    
    <!--<param name="base_global_planner" type="string" value="navfn/NavfnROS" />-->
    <param name="base_global_planner" type="string" value="global_planner/GlobalPlanner" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

    <!--To mark the square as restricted area-->
    <rosparam file="$(find navigation)/params/restricted_area.yaml" command="load" ns="global_costmap/costmap_prohibition_layer" />
    <!--<rosparam file="$(find navigation)/params/restricted_area.yaml" command="load" ns="local_costmap/costmap_prohibition_layer" />-->
    
    <remap from="odom" to="odometry/filtered" />
  </node>

</launch>
